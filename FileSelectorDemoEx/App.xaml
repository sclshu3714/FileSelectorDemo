<Application x:Class="FileSelectorDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FileSelectorDemo"
             xmlns:converters="clr-namespace:FileSelectorDemo.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FileSelectorDemo;component/Themes/ScrollViewerStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/FileSelectorDemo;component/Themes/CustomDataGrid.xaml"></ResourceDictionary>                      
            </ResourceDictionary.MergedDictionaries>
            <converters:CollectionSelectedCountConverter x:Key="CollectionSelectedCountConverter"></converters:CollectionSelectedCountConverter>
            <converters:CollectionSelectedSizeConverter x:Key="CollectionSelectedSizeConverter"></converters:CollectionSelectedSizeConverter>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
